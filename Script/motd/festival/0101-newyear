#!/bin/bash
# -----------------------------------------------------------------
#                         New Year (0101)
# [C] http://chris.com/ascii/index.php?art=holiday/4th%20of%20july
# [R] https://github.com/BassyKuo/WelcomeMsg
# -----------------------------------------------------------------
d=`date +%m%d`
h=`date +%H`
y=`date +%Y`
countdown_d=$((1232-$d))
countdown_h=$((24-$h))
date=`date +%Y.%m.%d`
color=225

if [[ $d == 0101 ]]; then 
	#    ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
	msg="============== $date  HAPPY NEW YEAR =============="
	color=226
elif [[ $countdown_d -le 5 && $countdown_d -ge 2 ]]; then
	msg="              $(($y+1)) New Year [ IN $countdown_d DAYS ]"
elif [[ $countdown_d == 1 ]]; then
	msg="        [ $(($y+1)) NEW YEAR COUNTDOWN $countdown_h HOUR(S) ]"
	color=$((${color}-${h}/4))
fi

W='\e[0m'
f='\e[5m'
D='\e[4;38;5;16m'
f1='\e[38;5;185m'
f2='\e[38;5;209m'
f3='\e[38;5;158m'
f4='\e[38;5;117m'
f5='\e[38;5;6m'
f6='\e[38;5;205m'

echo -n -e "
                                    $f4.''.
          $f6.''.$W             $f2*''*    $f4:_\/_:     $f1.$W
         $f6:_\/_:$W   $f5.    $f6.:.$f2*_\/_*   $f4: /\ :  $f1.'.:.'.$W
     $f4.''.$f6: /\ :$W$f5 _\(/_  $f6':'$f2* /\ *  $f3: $f4'..'.  $f1-=:o:=-$W
    $f4:_\/_:$f6'$W$f2.:::. $f5/)\\\\$f1*''* $W .|.$f2* $f3'.\'/.'${f5}_\(/_$f1'.':'.'$W
    $f4: /\ : $f2:::::  $f5'$f1*_\/_* $W| |  $f3-= o =- $f5/)\    $f1'  $W$f6*
     $f4'..'  $f2':::'   $f1* /\ * $W|'|  $f3.'/.\'.  $f5'$W._____  ${D}Copyright (c) Bass$W
         $f4*$W        __$f1*..* $W|  |     $f3:$W      |.   |' .---\"|
          _$f4*$W   .-'   '-. |  |     .--'|  ||   | _|    |
       .-'|  _.|  |    ||   '-__  |   |  |    ||      |
       |' | |.    |    ||       | |   |  |    ||      |
    ___|  '-'     '    \"\"       '-'   '-.'    '\`      |____
   ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
   \e[38;5;${color}m$msg\e[0m
"

#                                  .''.
#        .''.             *''*    :_\/_:     .
#       :_\/_:   .    .:.*_\/_*   : /\ :  .'.:.'.
#   .''.: /\ : _\(/_  ':'* /\ *  : '..'.  -=:o:=-
#  :_\/_:'.:::. /)\*''*  .|.* '.\'/.'_\(/_'.':'.'
#  : /\ : :::::  '*_\/_* | |  -= o =- /)\    '  *
#   '..'  ':::'   * /\ * |'|  .'/.\'.  '._____
#       *        __*..* |  |     :      |.   |' .---"|
#        _*   .-'   '-. |  |     .--'|  ||   | _|    |
#     .-'|  _.|  |    ||   '-__  |   |  |    ||      |
#     |' | |.    |    ||       | |   |  |    ||      |
#  ___|  '-'     '    ""       '-'   '-.'    '`      |____
# jgs~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
